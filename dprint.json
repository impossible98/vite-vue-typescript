{
    "incremental": true,
    "typescript": {
        "indentWidth": 2
    },
    "json": {
        "indentWidth": 4
    },
    "markdown": {
    },
    "toml": {
    },
    "vue": {
        "indentWidth": 2
    },
    "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,toml,vue}"],
    "excludes": [
        "**/node_modules",
        "**/*-lock.json"
    ],
    "plugins": [
        "https://plugins.dprint.dev/typescript-0.67.0.wasm",
        "https://plugins.dprint.dev/json-0.15.1.wasm",
        "https://plugins.dprint.dev/markdown-0.13.1.wasm",
        "https://plugins.dprint.dev/toml-0.5.4.wasm",
        "https://plugins.dprint.dev/malobre/vue-v0.4.2.wasm"
    ]
}
